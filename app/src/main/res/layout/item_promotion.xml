<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?colorPrimaryDark"
    android:orientation="vertical"
    android:padding="8dp"
    android:theme="@style/AppTheme.PopupOverlay.Dark"
    >

  <TextView
      android:id="@+id/tv_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="4dp"
      android:layout_marginRight="4dp"
      android:padding="4dp"
      android:textAppearance="@style/TextAppearance.AppCompat.Headline"
      android:textSize="22sp"
      tools:text="Do you like this library?"
      />

  <TextView
      android:id="@+id/tv_description"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="4dp"
      android:layout_marginRight="4dp"
      android:padding="4dp"
      android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
      tools:text="Star and watch the library for latest updates."
      />

  <Button
      android:id="@+id/btn_github"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:drawablePadding="8dp"
      android:drawableRight="@drawable/ic_launch"
      android:text="Open in Github"
      style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
      />

</LinearLayout>